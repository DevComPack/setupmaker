<?xml version="1.0" encoding="UTF-8"?>
<project name="DevComPack" default="dist" basedir=".">
	
	<!-- classpath -->
	<path id="project.path">
		<pathelement path="${classpath}"/>
		<pathelement location="lib/ant-launcher.jar"/>
		<fileset dir="${lib}">
		  <include name="**/*.jar"/>
		</fileset>
    </path>
    
    <description>
        DevComPack Setup Maker
    </description>
	
	<!-- set global properties for this build -->
	<property name="src" location="${basedir}/src"/>
	<property name="res"  location="${basedir}/res"/>
	<property name="lib"  location="${basedir}/lib/ant"/>
	<property name="build" location="${basedir}/bin/ant"/>
	<property name="dist"  location="${basedir}/target"/>
	<property name="compiler" location="${basedir}/compiler"/>
	
	<target name="init">
		<!-- Create the time stamp -->
		<tstamp/>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}"/>
	</target>
	
	<target name="compile" depends="init" description="compile the source " >
		<path refid="project.path"/>
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}"/>
	</target>
	
	<target name="dist" depends="compile" description="generate the distribution" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}"/>
	
		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${dist}/package-${DSTAMP}.jar" basedir="${build}"/>
	</target>
	
	<target name="run" description="launches izpack package" >
		<java jar="${dist}/package.jar" fork="true" failonerror="true" >
	      <classpath>
	        <pathelement location="${dist}/package.jar"/>
	        <pathelement path="${java.class.path}"/>
	      </classpath>
	    </java>
	</target>
	
	<target name="debug" description="launches izpack package with trace mode enabled" >
		<exec executable="java" failonerror="false">
            <arg line="-DTRACE=TRUE"/>
            <arg line="-jar ${dist}/package.jar"/>
        </exec>
	</target>
	
	<target name="clean" description="clean up" >
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>
	
	<!-- Allows us to use the IzPack Standalone Ant task -->
	<import file="./res/xml/izpack-target.xml" />
  
</project>